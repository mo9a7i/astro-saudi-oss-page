--- 
import '@fontsource-variable/cairo';



interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ar" dir="rtl">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Saudi Open Source Community">
		<meta name="viewport" content="width=device-width" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="icon" href="/favicon.ico" />
		<meta property="og:image" content="/favicon.ico" />
		<meta name="theme-color" content="#003300" />
		<link rel="manifest" href="/manifest.json" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="dark:bg-green-950 dark:text-white bg-[url('/assets/images/background.svg')] 
	before:bg-gradient-to-tr 
	before:from-sky-500 
	before:to-green-500 
	before:bg-opacity-50
	before:absolute 
	before:w-full before:h-full 
	before:top-0 before:left-0 
	relative 
	before:-z-30">
		<slot />
	</body>
</html>
